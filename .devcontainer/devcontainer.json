{
  "name": "Evodoodle Container",
  "image": "ghcr.io/anushapb/evodoodle:latest",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "jupyter.notebookFileRoot": "/workspace"
  },
  "features": {
    "desktop-lite": {
      "password": "vscode",
      "webPort": "6080",
      "vncPort": "5901"
    }
  },
  "forwardPorts": [6080, 5901, 8888],
  "runArgs": ["--init", "--shm-size=1g"]
}

